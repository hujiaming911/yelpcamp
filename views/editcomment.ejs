<%include partials/header%>



<div class="container">
    <h1 style="text-align:center">Edit your comment to <%= camp.name %></h1>
    <div style="width:30%; margin:20px auto">
            <form action="/campground/<%= camp._id %>/comments/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input type="text" value="<%= comment.text %>" class="form-control" name="comment[text]">
                </div>
                <div class="form-group">
                    <input type="submit" value="OK!" class="btn btn-primary btn-large btn-block">
                </div>
            </form>
            <a href="/campground" style="text-align:center">go back</a>
    </div>
</div>


<%include partials/tail%>